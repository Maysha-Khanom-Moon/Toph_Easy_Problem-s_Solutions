#include <bits/stdc++.h>
using namespace std;

int main() {
	int n;
	cin>>n;

	for(int i=0; i<n; i++){
        for(int space =1; space < n-i; space++){
            cout<<" ";
        }
        for(int star = 0; star < i; star++){
            cout<<"* ";
        }

        cout<<"*"<<endl;
	}

	return 0;
}
